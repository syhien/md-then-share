<!DOCTYPE html>
<html lang="<%= i18n.language %>">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= t('admin_panel_title') %></title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <div class="container">
        <h1><%= t('admin_panel_title') %></h1>
        <table class="table">
            <thead>
                <tr>
                    <th><%= t('table_id') %></th>
                    <th><%= t('table_filename') %></th>
                    <th><%= t('table_created_at') %></th>
                    <th><%= t('table_actions') %></th>
                </tr>
            </thead>
            <tbody>
                <% files.forEach(file => { %>
                    <tr>
                        <td><a href="/view/<%= file.id %>" target="_blank"><%= file.id %></a></td>
                        <td><%= file.originalname %></td>
                        <td><%= new Date(file.createdAt).toLocaleString() %></td>
                        <td>
                            <form action="/admin/delete/<%= file.id %>" method="post" style="display:inline;">
                                <button type="submit" class="btn btn-danger"><%= t('btn_delete') %></button>
                            </form>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
</body>
</html>
