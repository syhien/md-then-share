<!DOCTYPE html>
<html lang="<%= i18n.language %>">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= t('title') %></title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <div class="container">
        <h1><%= t('share_markdown') %></h1>
        <form id="upload-form" action="/upload" method="post" enctype="multipart/form-data">
            <div>
                <h3><%= t('upload_title') %></h3>
                <div id="drop-zone">
                    <p><%= t('drop_zone_text') %></p>
                    <input type="file" name="mdfile" id="file-input" accept=".md,.markdown" hidden>
                    <p id="file-name"></p>
                </div>
            </div>
            <hr>
            <div>
                <h3><%= t('paste_title') %></h3>
                <textarea name="mdtext" rows="10"></textarea>
            </div>
            <button type="submit" class="btn"><%= t('generate_link') %></button>
        </form>
        <% if (locals.error) { %>
            <p style="color: red;"><%= error %></p>
        <% } %>
        <% if (locals.url) { %>
            <div>
                <h2><%= t('share_link_title') %></h2>
                <p>
                    <a href="<%= url %>"><%= url %></a>
                </p>
            </div>
        <% } %>
    </div>
    <script src="/js/upload.js"></script>
</body>
</html>
